<link rel="stylesheet" href="articles.scss">
<table border=1>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td style="width:100px"><%= article.title %></td>
      <td style="width:300px"><%= article.text %></td>
      <td class="actions buttons"><%= link_to 'Show', article_path(article) %></td>
      <td class="actions buttons"><%= link_to 'Edit', edit_article_path(article) %></td>
      <td class="actions buttons"><%= link_to 'Destroy', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>